{
    "name": "dscheinah/sx-template",
    "description": "Basics for a templating syntax usable for output and content management.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "^8.1",
        "dscheinah/sx-container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Sx\\Template\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sx\\TemplateTest\\": "test/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
